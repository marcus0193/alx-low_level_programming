# Compiler to be used
CC := gcc

# Source files
SRC := $(wildcard *.c)

# Object files
OBJ := $(SRC:.c=.o)

# Name of the executable
NAME := school

# The all rule builds the executable
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $^ -o $@

%.o: %.c
	$(CC) -c $< -o $@

# Clean rule to remove the object files and executable
clean:
	rm -f $(OBJ) $(NAME)
